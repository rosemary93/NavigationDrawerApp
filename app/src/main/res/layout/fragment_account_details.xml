<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF176"
    android:orientation="vertical"
    android:padding="5sp"
    tools:context=".AccountDetailsFragment">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Please choose a bank to show account"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp">

        <Button
            android:id="@+id/button_melli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1sp"
            android:layout_marginEnd="1sp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_shape"
            android:text="melli" />

        <Button
            android:id="@+id/button_tejarat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1sp"
            android:layout_marginEnd="1sp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_shape"
            android:text="tejarat" />

        <Button
            android:id="@+id/button_parsian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1sp"
            android:layout_marginEnd="1sp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_shape"
            android:text="parsian" />

        <Button
            android:id="@+id/button_mellat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1sp"
            android:layout_marginEnd="1sp"
            android:layout_weight="1"
            android:background="@drawable/round_corner_shape"
            android:text="mellat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Llayout_account_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="20sp"
        android:orientation="vertical"
        android:padding="5sp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Bank"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_shape"
            android:padding="5sp"
            android:textSize="20sp"
            tools:text="Bank" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Card number"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_shape"
            android:padding="5sp"
            android:textSize="20sp"
            tools:text="cardNumber" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Account number"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_shape"
            android:padding="5sp"
            android:textSize="20sp"
            tools:text="accountNumber" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="SHABA"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_shaba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_shape"
            android:padding="5sp"
            android:textSize="20sp"
            tools:text="SHABA" />
    </LinearLayout>

    <Button
        android:id="@+id/button_back_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40sp"
        android:text="back" />
</LinearLayout>